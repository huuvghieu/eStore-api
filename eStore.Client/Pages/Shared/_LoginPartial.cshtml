<ul class="navbar-nav">
    @if (!User.Identity.IsAuthenticated)
    {

        <li class="nav-item">
            <a class="nav-link" id="login" asp-page="/Auth/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="register" asp-page="/Auth/Register">Register</a>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a id="manage" class="nav-link" asp-page="/Index" title="Manage">Hello @User.Identity.Name !</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-page="/Auth/Login" asp-page-handler="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
</ul>